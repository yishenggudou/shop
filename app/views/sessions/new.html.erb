<%= provide(:title,'登陆')%>
<div class="row">
  <div class="span6 offset3">
  	<h1>登陆</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :邮箱 %>
      <%= f.text_field :email %>

      <%= f.label :密码 %>
      <%= f.password_field :password %></br>

      <%= f.submit "登陆", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>没有注册？ <%= link_to "现在注册！", signup_path %></p>
  </div>
</div>
